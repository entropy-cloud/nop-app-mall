<?xml version="1.0" encoding="UTF-8" ?>
<view x:schema="/nop/schema/xui/xview.xdef" bizObjName="LitemallAddress" xmlns:i18n-en="i18n-en"
      xmlns:x="/nop/schema/xdsl.xdef" xmlns:j="j">

    <objMeta>/app/mall/model/LitemallAddress/LitemallAddress.xmeta</objMeta>

    <controlLib>/nop/web/xlib/control.xlib</controlLib>

    <grids>
        <grid id="list" x:abstract="true">
            <cols>

                <!--Id-->
                <col id="id" mandatory="true" sortable="true"/>

                <!--收货人名称-->
                <col id="name" mandatory="true" sortable="true"/>

                <!--用户表的用户ID-->
                <col id="userId" mandatory="true" sortable="true"/>

                <!--行政区域表的省ID-->
                <col id="province" mandatory="true" sortable="true"/>

                <!--行政区域表的市ID-->
                <col id="city" mandatory="true" sortable="true"/>

                <!--行政区域表的区县ID-->
                <col id="county" mandatory="true" sortable="true"/>

                <!--详细收货地址-->
                <col id="addressDetail" mandatory="true" sortable="true"/>

                <!--地区编码-->
                <col id="areaCode" sortable="true"/>

                <!--邮政编码-->
                <col id="postalCode" sortable="true"/>

                <!--手机号码-->
                <col id="tel" mandatory="true" sortable="true"/>

                <!--是否默认地址-->
                <col id="isDefault" mandatory="true" sortable="true"/>
            </cols>
        </grid>
        <grid id="pick-list" x:prototype="list" x:abstract="true"/>
    </grids>

    <forms>
        <form id="view" editMode="view" title="查看-收货地址表" i18n-en:title="View ">
            <layout>
 id[Id] name[收货人名称]
 userId[用户表的用户ID] province[行政区域表的省ID]
 city[行政区域表的市ID] county[行政区域表的区县ID]
 addressDetail[详细收货地址] areaCode[地区编码]
 postalCode[邮政编码] tel[手机号码]
 isDefault[是否默认地址] 
</layout>
        </form>
        <form id="add" editMode="add" title="新增-收货地址表" i18n-en:title="Add " x:prototype="edit"/>
        <form id="edit" editMode="update" title="编辑-收货地址表" i18n-en:title="Edit ">
            <layout>
 id[Id] name[收货人名称]
 userId[用户表的用户ID] province[行政区域表的省ID]
 city[行政区域表的市ID] county[行政区域表的区县ID]
 addressDetail[详细收货地址] areaCode[地区编码]
 postalCode[邮政编码] tel[手机号码]
 isDefault[是否默认地址] 
</layout>
        </form>
        <form id="query" editMode="query" title="查询条件" i18n-en:title="Query Condition" x:abstract="true">
            <layout/>
        </form>
        <form id="asideFilter" editMode="query" x:abstract="true" submitOnChange="true">
            <layout/>
        </form>
        <form id="batchUpdate" editMode="update" x:abstract="true" title="修改-收货地址表" i18n-en:title="Update ">
            <layout/>
        </form>
    </forms>

    <pages>
        <crud name="main" grid="list" asideFilterForm="asideFilter" filterForm="query" x:abstract="true">
            <table autoFillHeight="true">
                <api url="@query:LitemallAddress__findPage/{@pageSelection}"/>
            </table>
            <listActions>
                <action id="batch-delete-button" label="@i18n:common.batchDelete" batch="true">
                    <api url="@mutation:LitemallAddress__delete?ids=$ids"/>
                    <confirmText>@i18n:common.confirmBatchDelete</confirmText>
                </action>
                <action id="add-button" level="primary" label="@i18n:common.add" icon="fa fa-plus pull-left">
                    <dialog page="add"/>
                </action>
            </listActions>
            <rowActions>
                <action id="row-view-button" level="primary" label="@i18n:common.view">
                    <dialog page="view"/>
                </action>
                <action id="row-update-button" level="primary" label="@i18n:common.edit" x:abstract="true">
                    <dialog page="update"/>
                </action>
                <action id="row-delete-button" level="danger" label="@i18n:common.delete" x:abstract="true">
                    <api url="@mutation:LitemallAddress__delete?id=$id"/>
                    <confirmText>@i18n:common.confirmDelete</confirmText>
                </action>
                <actionGroup id="row-more-button" label="@i18n:common.more" level="primary">
                    <action id="row-update-button" level="primary" label="@i18n:common.edit">
                        <dialog page="update"/>
                    </action>
                    <action id="row-delete-button" level="danger" label="@i18n:common.delete">
                        <api url="@mutation:LitemallAddress__delete?id=$id"/>
                        <confirmText>@i18n:common.confirmDelete</confirmText>
                    </action>
                </actionGroup>
            </rowActions>
        </crud>
        <picker name="picker" grid="pick-list" asideFilterForm="asideFilter" filterForm="query" x:abstract="true">
            <table>
                <api url="@query:LitemallAddress__findPage/{@pageSelection}"/>
            </table>
        </picker>
        <simple name="add" form="add">
            <api url="@mutation:LitemallAddress__save/id"/>
        </simple>
        <simple name="view" form="view">
            <api url="@query:LitemallAddress__get/{@formSelection}?id=$id"/>
        </simple>
        <simple name="update" form="edit">
            <initApi url="@query:LitemallAddress__get/{@formSelection}?id=$id"/>
            <api url="@mutation:LitemallAddress__update/id?id=$id" withFormData="true"/>
        </simple>
    </pages>
</view>