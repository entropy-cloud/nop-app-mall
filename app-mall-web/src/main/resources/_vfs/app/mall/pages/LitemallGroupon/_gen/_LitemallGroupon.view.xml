<?xml version="1.0" encoding="UTF-8" ?>
<view x:schema="/nop/schema/xui/xview.xdef" bizObjName="LitemallGroupon" xmlns:i18n-en="i18n-en"
      xmlns:x="/nop/schema/xdsl.xdef" xmlns:j="j">

    <objMeta>/app/mall/model/LitemallGroupon/LitemallGroupon.xmeta</objMeta>

    <controlLib>/nop/web/xlib/control.xlib</controlLib>

    <grids>
        <grid id="list" x:abstract="true">
            <cols>

                <!--Id-->
                <col id="id" mandatory="true" sortable="true"/>

                <!--订单ID-->
                <col id="orderId" mandatory="true" sortable="true"/>

                <!--如果是开团用户，则groupon_id是0；如果是参团用户，则groupon_id是团购活动ID-->
                <col id="grouponId" sortable="true"/>

                <!--团购规则ID-->
                <col id="rulesId" mandatory="true" sortable="true"/>

                <!--用户ID-->
                <col id="userId" mandatory="true" sortable="true"/>

                <!--团购分享图片地址-->
                <col id="shareUrl" sortable="true"/>

                <!--开团用户ID-->
                <col id="creatorUserId" mandatory="true" sortable="true"/>

                <!--开团时间-->
                <col id="creatorUserTime" sortable="true"/>

                <!--团购活动状态，开团未支付则0，开团中则1，开团失败则2-->
                <col id="status" sortable="true"/>
            </cols>
        </grid>
        <grid id="pick-list" x:prototype="list" x:abstract="true"/>
    </grids>

    <forms>
        <form id="view" editMode="view" title="查看-团购活动表" i18n-en:title="View ">
            <layout>
 id[Id]
 orderId[订单ID]
 grouponId[如果是开团用户，则groupon_id是0；如果是参团用户，则groupon_id是团购活动ID]
 rulesId[团购规则ID]
 userId[用户ID]
 shareUrl[团购分享图片地址]
 creatorUserId[开团用户ID]
 creatorUserTime[开团时间]
 status[团购活动状态，开团未支付则0，开团中则1，开团失败则2]
</layout>
        </form>
        <form id="add" editMode="add" title="新增-团购活动表" i18n-en:title="Add " x:prototype="edit"/>
        <form id="edit" editMode="update" title="编辑-团购活动表" i18n-en:title="Edit ">
            <layout>
 id[Id]
 orderId[订单ID]
 grouponId[如果是开团用户，则groupon_id是0；如果是参团用户，则groupon_id是团购活动ID]
 rulesId[团购规则ID]
 userId[用户ID]
 shareUrl[团购分享图片地址]
 creatorUserId[开团用户ID]
 creatorUserTime[开团时间]
 status[团购活动状态，开团未支付则0，开团中则1，开团失败则2]
</layout>
        </form>
        <form id="query" editMode="query" title="查询条件" i18n-en:title="Query Condition" x:abstract="true">
            <layout/>
        </form>
        <form id="asideFilter" editMode="query" x:abstract="true" submitOnChange="true">
            <layout/>
        </form>
        <form id="batchUpdate" editMode="update" x:abstract="true" title="修改-团购活动表" i18n-en:title="Update ">
            <layout/>
        </form>
    </forms>

    <pages>
        <crud name="main" grid="list" asideFilterForm="asideFilter" filterForm="query" x:abstract="true">
            <table autoFillHeight="true">
                <api url="@query:LitemallGroupon__findPage/{@pageSelection}"/>
            </table>
            <listActions>
                <action id="batch-delete-button" label="@i18n:common.batchDelete" batch="true">
                    <api url="@mutation:LitemallGroupon__delete?ids=$ids"/>
                    <confirmText>@i18n:common.confirmBatchDelete</confirmText>
                </action>
                <action id="add-button" level="primary" label="@i18n:common.add" icon="fa fa-plus pull-left">
                    <dialog page="add"/>
                </action>
            </listActions>
            <rowActions>
                <action id="row-view-button" level="primary" label="@i18n:common.view">
                    <dialog page="view"/>
                </action>
                <action id="row-update-button" level="primary" label="@i18n:common.edit" x:abstract="true">
                    <dialog page="update"/>
                </action>
                <action id="row-delete-button" level="danger" label="@i18n:common.delete" x:abstract="true">
                    <api url="@mutation:LitemallGroupon__delete?id=$id"/>
                    <confirmText>@i18n:common.confirmDelete</confirmText>
                </action>
                <actionGroup id="row-more-button" label="@i18n:common.more" level="primary">
                    <action id="row-update-button" level="primary" label="@i18n:common.edit">
                        <dialog page="update"/>
                    </action>
                    <action id="row-delete-button" level="danger" label="@i18n:common.delete">
                        <api url="@mutation:LitemallGroupon__delete?id=$id"/>
                        <confirmText>@i18n:common.confirmDelete</confirmText>
                    </action>
                </actionGroup>
            </rowActions>
        </crud>
        <picker name="picker" grid="pick-list" asideFilterForm="asideFilter" filterForm="query" x:abstract="true">
            <table>
                <api url="@query:LitemallGroupon__findPage/{@pageSelection}"/>
            </table>
        </picker>
        <simple name="add" form="add">
            <api url="@mutation:LitemallGroupon__save/id"/>
        </simple>
        <simple name="view" form="view">
            <api url="@query:LitemallGroupon__get/{@formSelection}?id=$id"/>
        </simple>
        <simple name="update" form="edit">
            <initApi url="@query:LitemallGroupon__get/{@formSelection}?id=$id"/>
            <api url="@mutation:LitemallGroupon__update/id?id=$id" withFormData="true"/>
        </simple>
    </pages>
</view>