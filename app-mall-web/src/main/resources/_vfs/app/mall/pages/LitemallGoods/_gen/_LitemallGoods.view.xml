<?xml version="1.0" encoding="UTF-8" ?>
<view x:schema="/nop/schema/xui/xview.xdef" bizObjName="LitemallGoods" xmlns:i18n-en="i18n-en"
      xmlns:x="/nop/schema/xdsl.xdef" xmlns:j="j">

    <objMeta>/app/mall/model/LitemallGoods/LitemallGoods.xmeta</objMeta>

    <controlLib>/nop/web/xlib/control.xlib</controlLib>

    <grids>
        <grid id="list" x:abstract="true">
            <cols>

                <!--Id-->
                <col id="id" mandatory="true" sortable="true"/>

                <!--商品编号-->
                <col id="goodsSn" mandatory="true" sortable="true"/>

                <!--商品名称-->
                <col id="name" mandatory="true" sortable="true"/>

                <!--商品所属类目ID-->
                <col id="categoryId" sortable="true"/>

                <!--Brandid-->
                <col id="brandId" sortable="true"/>

                <!--商品宣传图片列表，采用JSON数组格式-->
                <col id="gallery" sortable="true"/>

                <!--商品关键字，采用逗号间隔-->
                <col id="keywords" sortable="true"/>

                <!--商品简介-->
                <col id="brief" sortable="true"/>

                <!--是否上架-->
                <col id="isOnSale" sortable="true"/>

                <!--Sortorder-->
                <col id="sortOrder" sortable="true"/>

                <!--商品页面商品图片-->
                <col id="picUrl" sortable="true"/>

                <!--商品分享海报-->
                <col id="shareUrl" sortable="true"/>

                <!--是否新品首发，如果设置则可以在新品首发页面展示-->
                <col id="isNew" sortable="true"/>

                <!--是否人气推荐，如果设置则可以在人气推荐页面展示-->
                <col id="isHot" sortable="true"/>

                <!--商品单位，例如件、盒-->
                <col id="unit" sortable="true"/>

                <!--专柜价格-->
                <col id="counterPrice" sortable="true"/>

                <!--零售价格-->
                <col id="retailPrice" sortable="true"/>

                <!--商品详细介绍，是富文本格式-->
                <col id="detail" sortable="true"/>

                <!--创建时间-->
                <col id="addTime" sortable="true"/>

                <!--更新时间-->
                <col id="updateTime" sortable="true"/>

                <!--逻辑删除-->
                <col id="deleted" sortable="true"/>
            </cols>
        </grid>
        <grid id="pick-list" x:prototype="list" x:abstract="true"/>
    </grids>

    <forms>
        <form id="view" editMode="view" title="查看-商品基本信息表" i18n-en:title="View ">
            <layout>
 id[Id] goodsSn[商品编号]
 name[商品名称] categoryId[商品所属类目ID]
 brandId[Brandid] gallery[商品宣传图片列表，采用JSON数组格式]
 keywords[商品关键字，采用逗号间隔] brief[商品简介]
 isOnSale[是否上架] sortOrder[Sortorder]
 picUrl[商品页面商品图片] shareUrl[商品分享海报]
 isNew[是否新品首发，如果设置则可以在新品首发页面展示] isHot[是否人气推荐，如果设置则可以在人气推荐页面展示]
 unit[商品单位，例如件、盒] counterPrice[专柜价格]
 retailPrice[零售价格] detail[商品详细介绍，是富文本格式]
 addTime[创建时间] updateTime[更新时间]
 deleted[逻辑删除] 
</layout>
        </form>
        <form id="add" editMode="add" title="新增-商品基本信息表" i18n-en:title="Add " x:prototype="edit"/>
        <form id="edit" editMode="update" title="编辑-商品基本信息表" i18n-en:title="Edit ">
            <layout>
 id[Id] goodsSn[商品编号]
 name[商品名称] categoryId[商品所属类目ID]
 brandId[Brandid] gallery[商品宣传图片列表，采用JSON数组格式]
 keywords[商品关键字，采用逗号间隔] brief[商品简介]
 isOnSale[是否上架] sortOrder[Sortorder]
 picUrl[商品页面商品图片] shareUrl[商品分享海报]
 isNew[是否新品首发，如果设置则可以在新品首发页面展示] isHot[是否人气推荐，如果设置则可以在人气推荐页面展示]
 unit[商品单位，例如件、盒] counterPrice[专柜价格]
 retailPrice[零售价格] detail[商品详细介绍，是富文本格式]
 addTime[创建时间] updateTime[更新时间]
 deleted[逻辑删除] 
</layout>
        </form>
        <form id="query" editMode="query" title="查询条件" i18n-en:title="Query Condition" x:abstract="true">
            <layout/>
        </form>
        <form id="asideFilter" editMode="query" x:abstract="true" submitOnChange="true">
            <layout/>
        </form>
        <form id="batchUpdate" editMode="update" x:abstract="true" title="修改-商品基本信息表" i18n-en:title="Update ">
            <layout/>
        </form>
    </forms>

    <pages>
        <crud name="main" grid="list" asideFilterForm="asideFilter" filterForm="query" x:abstract="true">
            <table autoFillHeight="true">
                <api url="@query:LitemallGoods__findPage/{@pageSelection}"/>
            </table>
            <listActions>
                <action id="batch-delete-button" label="@i18n:common.batchDelete" batch="true">
                    <api url="@mutation:LitemallGoods__delete?ids=$ids"/>
                    <confirmText>@i18n:common.confirmBatchDelete</confirmText>
                </action>
                <action id="add-button" level="primary" label="@i18n:common.add" icon="fa fa-plus pull-left">
                    <dialog page="add"/>
                </action>
            </listActions>
            <rowActions>
                <action id="row-view-button" level="primary" label="@i18n:common.view">
                    <dialog page="view"/>
                </action>
                <actionGroup id="row-more-button" label="@i18n:common.more" level="primary">
                    <action id="row-update-button" level="primary" label="@i18n:common.edit">
                        <dialog page="update"/>
                    </action>
                    <action id="row-delete-button" level="danger" label="@i18n:common.delete">
                        <api url="@mutation:LitemallGoods__delete?id=$id"/>
                        <confirmText>@i18n:common.confirmDelete</confirmText>
                    </action>
                </actionGroup>
            </rowActions>
        </crud>
        <picker name="picker" grid="pick-list" asideFilterForm="asideFilter" filterForm="query" x:abstract="true">
            <table>
                <api url="@query:LitemallGoods__findPage/{@pageSelection}"/>
            </table>
        </picker>
        <simple name="add" form="add">
            <api url="@mutation:LitemallGoods__save/id"/>
        </simple>
        <simple name="view" form="view">
            <api url="@query:LitemallGoods__get/{@formSelection}?id=$id"/>
        </simple>
        <simple name="update" form="edit">
            <initApi url="@query:LitemallGoods__get/{@formSelection}?id=$id"/>
            <api url="@mutation:LitemallGoods__update/id?id=$id" withFormData="true"/>
        </simple>
    </pages>
</view>