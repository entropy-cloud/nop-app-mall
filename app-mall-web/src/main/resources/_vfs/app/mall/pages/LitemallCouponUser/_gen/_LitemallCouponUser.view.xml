<?xml version="1.0" encoding="UTF-8" ?>
<view x:schema="/nop/schema/xui/xview.xdef" bizObjName="LitemallCouponUser" xmlns:i18n-en="i18n-en"
      xmlns:x="/nop/schema/xdsl.xdef" xmlns:j="j">

    <objMeta>/app/mall/model/LitemallCouponUser/LitemallCouponUser.xmeta</objMeta>

    <controlLib>/nop/web/xlib/control.xlib</controlLib>

    <grids>
        <grid id="list" x:abstract="true">
            <cols>

                <!--Id-->
                <col id="id" mandatory="true" sortable="true"/>

                <!--用户ID-->
                <col id="userId" mandatory="true" sortable="true"/>

                <!--优惠券ID-->
                <col id="couponId" mandatory="true" sortable="true"/>

                <!--使用状态, 如果是0则未使用；如果是1则已使用；如果是2则已过期；如果是3则已经下架；-->
                <col id="status" sortable="true"/>

                <!--使用时间-->
                <col id="usedTime" sortable="true"/>

                <!--有效期开始时间-->
                <col id="startTime" sortable="true"/>

                <!--有效期截至时间-->
                <col id="endTime" sortable="true"/>

                <!--订单ID-->
                <col id="orderId" sortable="true"/>
            </cols>
        </grid>
        <grid id="pick-list" x:prototype="list" x:abstract="true"/>
    </grids>

    <forms>
        <form id="view" editMode="view" title="查看-优惠券用户使用表" i18n-en:title="View ">
            <layout>
 id[Id]
 userId[用户ID]
 couponId[优惠券ID]
 status[使用状态, 如果是0则未使用；如果是1则已使用；如果是2则已过期；如果是3则已经下架；]
 usedTime[使用时间]
 startTime[有效期开始时间]
 endTime[有效期截至时间]
 orderId[订单ID]
</layout>
        </form>
        <form id="add" editMode="add" title="新增-优惠券用户使用表" i18n-en:title="Add " x:prototype="edit"/>
        <form id="edit" editMode="update" title="编辑-优惠券用户使用表" i18n-en:title="Edit ">
            <layout>
 id[Id]
 userId[用户ID]
 couponId[优惠券ID]
 status[使用状态, 如果是0则未使用；如果是1则已使用；如果是2则已过期；如果是3则已经下架；]
 usedTime[使用时间]
 startTime[有效期开始时间]
 endTime[有效期截至时间]
 orderId[订单ID]
</layout>
        </form>
        <form id="query" editMode="query" title="查询条件" i18n-en:title="Query Condition" x:abstract="true">
            <layout/>
        </form>
        <form id="asideFilter" editMode="query" x:abstract="true" submitOnChange="true">
            <layout/>
        </form>
        <form id="batchUpdate" editMode="update" x:abstract="true" title="修改-优惠券用户使用表" i18n-en:title="Update ">
            <layout/>
        </form>
    </forms>

    <pages>
        <crud name="main" grid="list" asideFilterForm="asideFilter" filterForm="query" x:abstract="true">
            <table autoFillHeight="true">
                <api url="@query:LitemallCouponUser__findPage/{@pageSelection}"/>
            </table>
            <listActions>
                <action id="batch-delete-button" label="@i18n:common.batchDelete" batch="true">
                    <api url="@mutation:LitemallCouponUser__delete?ids=$ids"/>
                    <confirmText>@i18n:common.confirmBatchDelete</confirmText>
                </action>
                <action id="add-button" level="primary" label="@i18n:common.add" icon="fa fa-plus pull-left">
                    <dialog page="add"/>
                </action>
            </listActions>
            <rowActions>
                <action id="row-view-button" level="primary" label="@i18n:common.view">
                    <dialog page="view"/>
                </action>
                <actionGroup id="row-more-button" label="@i18n:common.more" level="primary">
                    <action id="row-update-button" level="primary" label="@i18n:common.edit">
                        <dialog page="update"/>
                    </action>
                    <action id="row-delete-button" level="danger" label="@i18n:common.delete">
                        <api url="@mutation:LitemallCouponUser__delete?id=$id"/>
                        <confirmText>@i18n:common.confirmDelete</confirmText>
                    </action>
                </actionGroup>
            </rowActions>
        </crud>
        <picker name="picker" grid="pick-list" asideFilterForm="asideFilter" filterForm="query" x:abstract="true">
            <table>
                <api url="@query:LitemallCouponUser__findPage/{@pageSelection}"/>
            </table>
        </picker>
        <simple name="add" form="add">
            <api url="@mutation:LitemallCouponUser__save/id"/>
        </simple>
        <simple name="view" form="view">
            <api url="@query:LitemallCouponUser__get/{@formSelection}?id=$id"/>
        </simple>
        <simple name="update" form="edit">
            <initApi url="@query:LitemallCouponUser__get/{@formSelection}?id=$id"/>
            <api url="@mutation:LitemallCouponUser__update/id?id=$id" withFormData="true"/>
        </simple>
    </pages>
</view>