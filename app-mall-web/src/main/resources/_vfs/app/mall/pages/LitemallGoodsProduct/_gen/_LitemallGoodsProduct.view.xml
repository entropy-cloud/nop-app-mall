<?xml version="1.0" encoding="UTF-8" ?>
<view x:schema="/nop/schema/xui/xview.xdef" bizObjName="LitemallGoodsProduct" xmlns:i18n-en="i18n-en"
      xmlns:x="/nop/schema/xdsl.xdef" xmlns:j="j">

    <objMeta>/app/mall/model/LitemallGoodsProduct/LitemallGoodsProduct.xmeta</objMeta>

    <controlLib>/nop/web/xlib/control.xlib</controlLib>

    <grids>
        <grid id="list" x:abstract="true">
            <cols>

                <!--Id-->
                <col id="id" mandatory="true" sortable="true"/>

                <!--商品ID-->
                <col id="goodsId" mandatory="true" sortable="true"/>

                <!--商品规格值-->
                <col id="specifications" mandatory="true" sortable="true"/>

                <!--商品货品价格-->
                <col id="price" mandatory="true" sortable="true"/>

                <!--商品货品数量-->
                <col id="number" mandatory="true" sortable="true"/>

                <!--商品货品图片-->
                <col id="url" sortable="true"/>
            </cols>
        </grid>
        <grid id="pick-list" x:prototype="list" x:abstract="true"/>
    </grids>

    <forms>
        <form id="view" editMode="view" title="查看-商品货品表" i18n-en:title="View ">
            <layout>
 id[Id]
 goodsId[商品ID]
 specifications[商品规格值]
 price[商品货品价格]
 number[商品货品数量]
 url[商品货品图片]
</layout>
        </form>
        <form id="add" editMode="add" title="新增-商品货品表" i18n-en:title="Add " x:prototype="edit"/>
        <form id="edit" editMode="update" title="编辑-商品货品表" i18n-en:title="Edit ">
            <layout>
 id[Id]
 goodsId[商品ID]
 specifications[商品规格值]
 price[商品货品价格]
 number[商品货品数量]
 url[商品货品图片]
</layout>
        </form>
        <form id="query" editMode="query" title="查询条件" i18n-en:title="Query Condition" x:abstract="true">
            <layout/>
        </form>
        <form id="asideFilter" editMode="query" x:abstract="true" submitOnChange="true">
            <layout/>
        </form>
        <form id="batchUpdate" editMode="update" x:abstract="true" title="修改-商品货品表" i18n-en:title="Update ">
            <layout/>
        </form>
    </forms>

    <pages>
        <crud name="main" grid="list" asideFilterForm="asideFilter" filterForm="query" x:abstract="true">
            <table autoFillHeight="true">
                <api url="@query:LitemallGoodsProduct__findPage/{@pageSelection}"/>
            </table>
            <listActions>
                <action id="batch-delete-button" label="@i18n:common.batchDelete" batch="true">
                    <api url="@mutation:LitemallGoodsProduct__delete?ids=$ids"/>
                    <confirmText>@i18n:common.confirmBatchDelete</confirmText>
                </action>
                <action id="add-button" level="primary" label="@i18n:common.add" icon="fa fa-plus pull-left">
                    <dialog page="add"/>
                </action>
            </listActions>
            <rowActions>
                <action id="row-view-button" level="primary" label="@i18n:common.view">
                    <dialog page="view"/>
                </action>
                <actionGroup id="row-more-button" label="@i18n:common.more" level="primary">
                    <action id="row-update-button" level="primary" label="@i18n:common.edit">
                        <dialog page="update"/>
                    </action>
                    <action id="row-delete-button" level="danger" label="@i18n:common.delete">
                        <api url="@mutation:LitemallGoodsProduct__delete?id=$id"/>
                        <confirmText>@i18n:common.confirmDelete</confirmText>
                    </action>
                </actionGroup>
            </rowActions>
        </crud>
        <picker name="picker" grid="pick-list" asideFilterForm="asideFilter" filterForm="query" x:abstract="true">
            <table>
                <api url="@query:LitemallGoodsProduct__findPage/{@pageSelection}"/>
            </table>
        </picker>
        <simple name="add" form="add">
            <api url="@mutation:LitemallGoodsProduct__save/id"/>
        </simple>
        <simple name="view" form="view">
            <api url="@query:LitemallGoodsProduct__get/{@formSelection}?id=$id"/>
        </simple>
        <simple name="update" form="edit">
            <initApi url="@query:LitemallGoodsProduct__get/{@formSelection}?id=$id"/>
            <api url="@mutation:LitemallGoodsProduct__update/id?id=$id" withFormData="true"/>
        </simple>
    </pages>
</view>