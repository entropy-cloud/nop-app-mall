<?xml version="1.0" encoding="UTF-8" ?>
<view x:schema="/nop/schema/xui/xview.xdef" bizObjName="LitemallCategory" xmlns:i18n-en="i18n-en"
      xmlns:x="/nop/schema/xdsl.xdef" xmlns:j="j" xmlns:gql="gql">

    <objMeta>/app/mall/model/LitemallCategory/LitemallCategory.xmeta</objMeta>

    <controlLib>/nop/web/xlib/control.xlib</controlLib>

    <grids>
        <grid id="list" x:abstract="true">
            <cols>

                <!--Id-->
                <col id="id" mandatory="true" sortable="true"/>

                <!--类目名称-->
                <col id="name" mandatory="true" sortable="true"/>

                <!--类目图标-->
                <col id="iconUrl" sortable="true"/>

                <!--类目图片-->
                <col id="picUrl" sortable="true"/>

                <!--类目关键字-->
                <col id="keywords" sortable="true"/>

                <!--简介-->
                <col id="desc" sortable="true"/>

                <!--级别-->
                <col id="level" mandatory="true" sortable="true"/>

                <!--父类目ID-->
                <col id="pid" sortable="true" x:abstract="true"/>
            </cols>
        </grid>
        <grid id="tree-list" x:prototype="list">
            <selection>children @TreeChildren(max:5)</selection>
        </grid>
        <grid id="pick-list" x:prototype="list" x:abstract="true"/>
    </grids>

    <forms>
        <form id="view" editMode="view" title="查看-类目表" i18n-en:title="View ">
            <layout>
 id[Id]
 name[类目名称]
 iconUrl[类目图标]
 picUrl[类目图片]
 keywords[类目关键字]
 desc[简介]
 level[级别]
 pid[父类目ID]
</layout>
        </form>
        <form id="add" editMode="add" title="新增-类目表" i18n-en:title="Add " x:prototype="edit"/>
        <form id="edit" editMode="edit" title="编辑-类目表" i18n-en:title="Edit ">
            <layout>
 name[类目名称]
 iconUrl[类目图标]
 picUrl[类目图片]
 keywords[类目关键字]
 desc[简介]
 level[级别]
 pid[父类目ID]
</layout>
        </form>
        <form id="query" editMode="query" title="查询条件" i18n-en:title="Query Condition" x:abstract="true">
            <layout/>
        </form>
        <form id="asideFilter" editMode="query" x:abstract="true" submitOnChange="true">
            <layout/>
        </form>
        <form id="batchUpdate" editMode="edit" x:abstract="true" title="修改-类目表" i18n-en:title="Update ">
            <layout/>
        </form>
    </forms>

    <pages>
        <crud name="main" grid="tree-list" asideFilterForm="asideFilter" filterForm="query" x:abstract="true">
            <table loadDataOnce="true" sortable="false" pager="none">
                <api url="@query:LitemallCategory__findList?filter_pid=__null" gql:selection="{@listSelection}"/>
            </table>
            <listActions>
                <action id="batch-delete-button" label="@i18n:common.batchDelete" batch="true">
                    <api url="@mutation:LitemallCategory__batchDelete?ids=$ids"/>
                    <confirmText>@i18n:common.confirmBatchDelete</confirmText>
                </action>
                <action id="add-button" level="primary" label="@i18n:common.add" icon="fa fa-plus pull-left">
                    <dialog page="add"/>
                </action>
            </listActions>
            <rowActions>
                <action id="row-view-button" level="primary" label="@i18n:common.view">
                    <dialog page="view"/>
                </action>
                <action id="row-update-button" level="primary" label="@i18n:common.edit" x:abstract="true">
                    <dialog page="update"/>
                </action>
                <action id="row-delete-button" level="danger" label="@i18n:common.delete" x:abstract="true">
                    <api url="@mutation:LitemallCategory__delete?id=$id"/>
                    <confirmText>@i18n:common.confirmDelete</confirmText>
                </action>
                <actionGroup id="row-more-button" label="@i18n:common.more" level="primary">
                    <action id="row-update-button" level="primary" label="@i18n:common.edit">
                        <dialog page="update"/>
                    </action>
                    <action id="row-add-child-button" label="@i18n:common.addChild">
                        <dialog page="add-child"/>
                    </action>
                    <action id="row-delete-button" level="danger" label="@i18n:common.delete">
                        <api url="@mutation:LitemallCategory__delete?id=$id"/>
                        <confirmText>@i18n:common.confirmDelete</confirmText>
                    </action>
                </actionGroup>
            </rowActions>
        </crud>
        <picker name="picker" grid="pick-list" asideFilterForm="asideFilter" filterForm="query" x:abstract="true">
            <table>
                <api url="@query:LitemallCategory__findPage" gql:selection="{@pageSelection}"/>
            </table>
        </picker>
        <simple name="add" form="add">
            <api url="@mutation:LitemallCategory__save/id"/>
        </simple>
        <simple name="view" form="view">
            <initApi url="@query:LitemallCategory__get?id=$id" gql:selection="{@formSelection}"/>
        </simple>
        <simple name="update" form="edit">
            <initApi url="@query:LitemallCategory__get?id=$id" gql:selection="{@formSelection}"/>
            <api url="@mutation:LitemallCategory__update/id?id=$id" withFormData="true"/>
        </simple>
        <simple name="add-child" form="add">
            <api url="@mutation:LitemallCategory__save/id" withFormData="true"/>
            <data>
                <_ j:key="pid">$id</_>
            </data>
        </simple>
    </pages>
</view>