<?xml version="1.0" encoding="UTF-8" ?>
<view x:extends="_gen/_LitemallGoodsProduct.view.xml" x:schema="/nop/schema/xui/xview.xdef"
      xmlns:x="/nop/schema/xdsl.xdef">

    <grids>
        <grid id="list"/>
        <grid id="pick-list"/>

        <grid id="ref-list">
            <cols>
                <col id="id" hidden="true"/>

                <!--商品规格名称-->
                <col id="specifications" mandatory="true"/>

                <!--商品货品价格-->
                <col id="price" mandatory="true" sortable="true"/>

                <!--商品货品数量-->
                <col id="number" mandatory="true" sortable="true"/>

                <!--商品货品图片-->
                <col id="url" sortable="true"/>
            </cols>
        </grid>
    </grids>

    <forms>
        <form id="view"/>
        <form id="edit"/>
        <form id="add"/>
    </forms>

    <pages>
        <crud name="main"/>
        <picker name="picker"/>
    </pages>
</view>