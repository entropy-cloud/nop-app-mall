<?xml version="1.0" encoding="UTF-8" ?>
<view x:schema="/nop/schema/xui/xview.xdef" bizObjName="LitemallAdmin" xmlns:i18n-en="i18n-en"
      xmlns:x="/nop/schema/xdsl.xdef" xmlns:j="j">

    <objMeta>/app/mall/model/LitemallAdmin/LitemallAdmin.xmeta</objMeta>

    <controlLib>/nop/web/xlib/control.xlib</controlLib>

    <grids>
        <grid id="list" x:abstract="true">
            <cols>

                <!--Id-->
                <col id="id" mandatory="true" sortable="true"/>

                <!--管理员名称-->
                <col id="username" mandatory="true" sortable="true"/>

                <!--管理员密码-->
                <col id="password" mandatory="true" sortable="true"/>

                <!--最近一次登录IP地址-->
                <col id="lastLoginIp" sortable="true"/>

                <!--最近一次登录时间-->
                <col id="lastLoginTime" sortable="true"/>

                <!--头像图片-->
                <col id="avatar" sortable="true"/>

                <!--创建时间-->
                <col id="addTime" sortable="true"/>

                <!--更新时间-->
                <col id="updateTime" sortable="true"/>

                <!--逻辑删除-->
                <col id="deleted" sortable="true"/>

                <!--角色列表-->
                <col id="roleIds" sortable="true"/>
            </cols>
        </grid>
        <grid id="pick-list" x:prototype="list" x:abstract="true"/>
    </grids>

    <forms>
        <form id="view" editMode="view" title="查看-管理员表" i18n-en:title="View ">
            <layout>
 id[Id] username[管理员名称]
 password[管理员密码] lastLoginIp[最近一次登录IP地址]
 lastLoginTime[最近一次登录时间] avatar[头像图片]
 addTime[创建时间] updateTime[更新时间]
 deleted[逻辑删除] roleIds[角色列表]
</layout>
        </form>
        <form id="add" editMode="add" title="新增-管理员表" i18n-en:title="Add " x:prototype="edit"/>
        <form id="edit" editMode="update" title="编辑-管理员表" i18n-en:title="Edit ">
            <layout>
 id[Id] username[管理员名称]
 password[管理员密码] lastLoginIp[最近一次登录IP地址]
 lastLoginTime[最近一次登录时间] avatar[头像图片]
 addTime[创建时间] updateTime[更新时间]
 deleted[逻辑删除] roleIds[角色列表]
</layout>
        </form>
        <form id="query" editMode="query" title="查询条件" i18n-en:title="Query Condition" x:abstract="true">
            <layout/>
        </form>
        <form id="asideFilter" editMode="query" x:abstract="true" submitOnChange="true">
            <layout/>
        </form>
        <form id="batchUpdate" editMode="update" x:abstract="true" title="修改-管理员表" i18n-en:title="Update ">
            <layout/>
        </form>
    </forms>

    <pages>
        <crud name="main" grid="list" asideFilterForm="asideFilter" filterForm="query" x:abstract="true">
            <table autoFillHeight="true">
                <api url="@query:LitemallAdmin__findPage/{@pageSelection}"/>
            </table>
            <listActions>
                <action id="batch-delete-button" label="@i18n:common.batchDelete" batch="true">
                    <api url="@mutation:LitemallAdmin__delete?ids=$ids"/>
                    <confirmText>@i18n:common.confirmBatchDelete</confirmText>
                </action>
                <action id="add-button" level="primary" label="@i18n:common.add" icon="fa fa-plus pull-left">
                    <dialog page="add"/>
                </action>
            </listActions>
            <rowActions>
                <action id="row-view-button" level="primary" label="@i18n:common.view">
                    <dialog page="view"/>
                </action>
                <actionGroup id="row-more-button" label="@i18n:common.more" level="primary">
                    <action id="row-update-button" level="primary" label="@i18n:common.edit">
                        <dialog page="update"/>
                    </action>
                    <action id="row-delete-button" level="danger" label="@i18n:common.delete">
                        <api url="@mutation:LitemallAdmin__delete?id=$id"/>
                        <confirmText>@i18n:common.confirmDelete</confirmText>
                    </action>
                </actionGroup>
            </rowActions>
        </crud>
        <picker name="picker" grid="pick-list" asideFilterForm="asideFilter" filterForm="query" x:abstract="true">
            <table>
                <api url="@query:LitemallAdmin__findPage/{@pageSelection}"/>
            </table>
        </picker>
        <simple name="add" form="add">
            <api url="@mutation:LitemallAdmin__save/id"/>
        </simple>
        <simple name="view" form="view">
            <api url="@query:LitemallAdmin__get/{@formSelection}?id=$id"/>
        </simple>
        <simple name="update" form="edit">
            <initApi url="@query:LitemallAdmin__get/{@formSelection}?id=$id"/>
            <api url="@mutation:LitemallAdmin__update/id?id=$id" withFormData="true"/>
        </simple>
    </pages>
</view>