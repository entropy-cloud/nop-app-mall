<?xml version="1.0" encoding="UTF-8" ?>
<view x:extends="_gen/_LitemallGoodsSpecification.view.xml" x:schema="/nop/schema/xui/xview.xdef"
      xmlns:x="/nop/schema/xdsl.xdef">

    <grids>
        <grid id="list"/>
        <grid id="pick-list"/>

        <grid id="ref-list">
            <cols>
                <!--商品规格名称-->
                <col id="specification" mandatory="true"/>

                <!--商品规格值-->
                <col id="value" mandatory="true"/>

                <!--商品规格图片-->
                <col id="picUrl" mandatory="true"/>
            </cols>
        </grid>
    </grids>

    <forms>
        <form id="view"/>
        <form id="edit"/>
        <form id="add"/>
    </forms>

    <pages>
        <crud name="main"/>
        <picker name="picker"/>
    </pages>
</view>