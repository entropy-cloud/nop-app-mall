<?xml version="1.0" encoding="UTF-8" ?>
<view x:schema="/nop/schema/xui/xview.xdef" bizObjName="LitemallComment" xmlns:i18n-en="i18n-en"
      xmlns:x="/nop/schema/xdsl.xdef" xmlns:j="j" xmlns:gql="gql">

    <objMeta>/app/mall/model/LitemallComment/LitemallComment.xmeta</objMeta>

    <controlLib>/nop/web/xlib/control.xlib</controlLib>

    <grids>
        <grid id="list" x:abstract="true">
            <cols>

                <!--Id-->
                <col id="id" mandatory="true" sortable="true"/>

                <!--如果type=0，则是商品评论；如果是type=1，则是专题评论。-->
                <col id="valueId" mandatory="true" sortable="true"/>

                <!--评论类型-->
                <col id="type" mandatory="true" sortable="true"/>

                <!--评论内容-->
                <col id="content" sortable="true"/>

                <!--管理员回复内容-->
                <col id="adminContent" sortable="true"/>

                <!--用户ID-->
                <col id="userId" mandatory="true" sortable="true"/>

                <!--是否含有图片-->
                <col id="hasPicture" sortable="true"/>

                <!--图片地址列表，采用JSON数组格式-->
                <col id="picUrls" sortable="true"/>

                <!--评分， 1-5-->
                <col id="star" sortable="true"/>
            </cols>
        </grid>
        <grid id="pick-list" x:prototype="list" x:abstract="true"/>
    </grids>

    <forms>
        <form id="view" editMode="view" title="查看-评论表" i18n-en:title="View ">
            <layout>
 id[Id]
 valueId[如果type=0，则是商品评论；如果是type=1，则是专题评论。]
 type[评论类型]
 content[评论内容]
 adminContent[管理员回复内容]
 userId[用户ID]
 hasPicture[是否含有图片]
 picUrls[图片地址列表，采用JSON数组格式]
 star[评分， 1-5]
</layout>
        </form>
        <form id="add" editMode="add" title="新增-评论表" i18n-en:title="Add " x:prototype="edit"/>
        <form id="edit" editMode="update" title="编辑-评论表" i18n-en:title="Edit ">
            <layout>
 valueId[如果type=0，则是商品评论；如果是type=1，则是专题评论。]
 type[评论类型]
 content[评论内容]
 adminContent[管理员回复内容]
 userId[用户ID]
 hasPicture[是否含有图片]
 picUrls[图片地址列表，采用JSON数组格式]
 star[评分， 1-5]
</layout>
        </form>
        <form id="query" editMode="query" title="查询条件" i18n-en:title="Query Condition" x:abstract="true">
            <layout/>
        </form>
        <form id="asideFilter" editMode="query" x:abstract="true" submitOnChange="true">
            <layout/>
        </form>
        <form id="batchUpdate" editMode="update" x:abstract="true" title="修改-评论表" i18n-en:title="Update ">
            <layout/>
        </form>
    </forms>

    <pages>
        <crud name="main" grid="list" asideFilterForm="asideFilter" filterForm="query" x:abstract="true">
            <table autoFillHeight="true">
                <api url="@query:LitemallComment__findPage" gql:selection="{@pageSelection}"/>
            </table>
            <listActions>
                <action id="batch-delete-button" label="@i18n:common.batchDelete" batch="true">
                    <api url="@mutation:LitemallComment__batchDelete?ids=$ids"/>
                    <confirmText>@i18n:common.confirmBatchDelete</confirmText>
                </action>
                <action id="add-button" level="primary" label="@i18n:common.add" icon="fa fa-plus pull-left">
                    <dialog page="add"/>
                </action>
            </listActions>
            <rowActions>
                <action id="row-view-button" level="primary" label="@i18n:common.view">
                    <dialog page="view"/>
                </action>
                <action id="row-update-button" level="primary" label="@i18n:common.edit" x:abstract="true">
                    <dialog page="update"/>
                </action>
                <action id="row-delete-button" level="danger" label="@i18n:common.delete" x:abstract="true">
                    <api url="@mutation:LitemallComment__delete?id=$id"/>
                    <confirmText>@i18n:common.confirmDelete</confirmText>
                </action>
                <actionGroup id="row-more-button" label="@i18n:common.more" level="primary">
                    <action id="row-update-button" level="primary" label="@i18n:common.edit">
                        <dialog page="update"/>
                    </action>
                    <action id="row-delete-button" level="danger" label="@i18n:common.delete">
                        <api url="@mutation:LitemallComment__delete?id=$id"/>
                        <confirmText>@i18n:common.confirmDelete</confirmText>
                    </action>
                </actionGroup>
            </rowActions>
        </crud>
        <picker name="picker" grid="pick-list" asideFilterForm="asideFilter" filterForm="query" x:abstract="true">
            <table>
                <api url="@query:LitemallComment__findPage" gql:selection="{@pageSelection}"/>
            </table>
        </picker>
        <simple name="add" form="add">
            <api url="@mutation:LitemallComment__save/id"/>
        </simple>
        <simple name="view" form="view">
            <initApi url="@query:LitemallComment__get?id=$id" gql:selection="{@formSelection}"/>
        </simple>
        <simple name="update" form="edit">
            <initApi url="@query:LitemallComment__get?id=$id" gql:selection="{@formSelection}"/>
            <api url="@mutation:LitemallComment__update/id?id=$id" withFormData="true"/>
        </simple>
    </pages>
</view>