<?xml version="1.0" encoding="UTF-8" ?>
<view x:schema="/nop/schema/xui/xview.xdef" bizObjName="LitemallTopic" xmlns:i18n-en="i18n-en"
      xmlns:x="/nop/schema/xdsl.xdef" xmlns:j="j">

    <objMeta>/app/mall/model/LitemallTopic/LitemallTopic.xmeta</objMeta>

    <controlLib>/nop/web/xlib/control.xlib</controlLib>

    <grids>
        <grid id="list" x:abstract="true">
            <cols>

                <!--Id-->
                <col id="id" mandatory="true" sortable="true"/>

                <!--专题标题-->
                <col id="title" mandatory="true" sortable="true"/>

                <!--专题子标题-->
                <col id="subtitle" sortable="true"/>

                <!--专题内容，富文本格式-->
                <col id="content" sortable="true"/>

                <!--专题相关商品最低价-->
                <col id="price" sortable="true"/>

                <!--专题阅读量-->
                <col id="readCount" sortable="true"/>

                <!--专题图片-->
                <col id="picUrl" sortable="true"/>

                <!--排序-->
                <col id="sortOrder" sortable="true"/>

                <!--专题相关商品，采用JSON数组格式-->
                <col id="goods" sortable="true"/>
            </cols>
        </grid>
        <grid id="pick-list" x:prototype="list" x:abstract="true"/>
    </grids>

    <forms>
        <form id="view" editMode="view" title="查看-专题表" i18n-en:title="View ">
            <layout>
 id[Id]
 title[专题标题]
 subtitle[专题子标题]
 content[专题内容，富文本格式]
 price[专题相关商品最低价]
 readCount[专题阅读量]
 picUrl[专题图片]
 sortOrder[排序]
 goods[专题相关商品，采用JSON数组格式]
</layout>
        </form>
        <form id="add" editMode="add" title="新增-专题表" i18n-en:title="Add " x:prototype="edit"/>
        <form id="edit" editMode="update" title="编辑-专题表" i18n-en:title="Edit ">
            <layout>
 id[Id]
 title[专题标题]
 subtitle[专题子标题]
 content[专题内容，富文本格式]
 price[专题相关商品最低价]
 readCount[专题阅读量]
 picUrl[专题图片]
 sortOrder[排序]
 goods[专题相关商品，采用JSON数组格式]
</layout>
        </form>
        <form id="query" editMode="query" title="查询条件" i18n-en:title="Query Condition" x:abstract="true">
            <layout/>
        </form>
        <form id="asideFilter" editMode="query" x:abstract="true" submitOnChange="true">
            <layout/>
        </form>
        <form id="batchUpdate" editMode="update" x:abstract="true" title="修改-专题表" i18n-en:title="Update ">
            <layout/>
        </form>
    </forms>

    <pages>
        <crud name="main" grid="list" asideFilterForm="asideFilter" filterForm="query" x:abstract="true">
            <table autoFillHeight="true">
                <api url="@query:LitemallTopic__findPage/{@pageSelection}"/>
            </table>
            <listActions>
                <action id="batch-delete-button" label="@i18n:common.batchDelete" batch="true">
                    <api url="@mutation:LitemallTopic__delete?ids=$ids"/>
                    <confirmText>@i18n:common.confirmBatchDelete</confirmText>
                </action>
                <action id="add-button" level="primary" label="@i18n:common.add" icon="fa fa-plus pull-left">
                    <dialog page="add"/>
                </action>
            </listActions>
            <rowActions>
                <action id="row-view-button" level="primary" label="@i18n:common.view">
                    <dialog page="view"/>
                </action>
                <action id="row-update-button" level="primary" label="@i18n:common.edit" x:abstract="true">
                    <dialog page="update"/>
                </action>
                <action id="row-delete-button" level="danger" label="@i18n:common.delete" x:abstract="true">
                    <api url="@mutation:LitemallTopic__delete?id=$id"/>
                    <confirmText>@i18n:common.confirmDelete</confirmText>
                </action>
                <actionGroup id="row-more-button" label="@i18n:common.more" level="primary">
                    <action id="row-update-button" level="primary" label="@i18n:common.edit">
                        <dialog page="update"/>
                    </action>
                    <action id="row-delete-button" level="danger" label="@i18n:common.delete">
                        <api url="@mutation:LitemallTopic__delete?id=$id"/>
                        <confirmText>@i18n:common.confirmDelete</confirmText>
                    </action>
                </actionGroup>
            </rowActions>
        </crud>
        <picker name="picker" grid="pick-list" asideFilterForm="asideFilter" filterForm="query" x:abstract="true">
            <table>
                <api url="@query:LitemallTopic__findPage/{@pageSelection}"/>
            </table>
        </picker>
        <simple name="add" form="add">
            <api url="@mutation:LitemallTopic__save/id"/>
        </simple>
        <simple name="view" form="view">
            <api url="@query:LitemallTopic__get/{@formSelection}?id=$id"/>
        </simple>
        <simple name="update" form="edit">
            <initApi url="@query:LitemallTopic__get/{@formSelection}?id=$id"/>
            <api url="@mutation:LitemallTopic__update/id?id=$id" withFormData="true"/>
        </simple>
    </pages>
</view>